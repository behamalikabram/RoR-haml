- provide :title, "Sign up"

.row
  .col-xs-12{style: "margin-top: 30px;"}
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form signup-form"}) do |f|
      = render 'shared/error_messages', object: resource
      %label.email
        = f.email_field :email, :autofocus => true, :placeholder => "E-mail:", "data-constraints" => "@Required @Email"
        %span.empty-message *This field is required.
        %span.error-message *This is not a valid email.
      %label.password
        = f.password_field :password, :autocomplete => "off", "data-constraints" => "@Required @Length(min=6,max=128)", :placeholder => "Password"
        %span.empty-message *This field is required.
        %span.error-message *Password is too short.
      %label.nickname.new-line
        = f.text_field :username, "data-constraints" => "@Required @Length(min=3,max=50)", :placeholder => "Your username"
        %span.empty-message *This field is required.
        %span.error-message *Username is too short.
      %label.password_confirmation
        = f.password_field :password_confirmation, :autocomplete => "off", "data-constraints" => "@Required @Length(min=6,max=128)", :placeholder => "Password confirmation"
        %span.empty-message *This field is required.
        %span.error-message *Password is too short.
      = f.submit style: "display:none;"
      .btns= link_to "Sign up", "#", class: "btn btn-primary submit"
    .clear
    = render 'devise/shared/links'